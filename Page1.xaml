<Page x:Class="Og.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Og"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1000"
      Title="Page1">

    <Grid>

        <ListBox x:Name="LBX1" SelectionChanged="LBX1_SelectionChanged" Margin="0,0,0,50"/>
        <StackPanel VerticalAlignment="Bottom">
            <Button Content="ADD" Height="20" Click="ADDList_Click"/>
            <TextBox x:Name="TBX1" Height="26" Width="1000" RenderTransformOrigin="0.5,0.5">
                <TextBox.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleY="1"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </TextBox.RenderTransform>
            </TextBox>
            <Button Content="DEL" Height="21" Click="DEList_Click"/>
        </StackPanel>
    </Grid>
</Page>
